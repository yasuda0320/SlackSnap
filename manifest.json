{
  "manifest_version": 3,
  "name": "SlackSnap",
  "version": "1.0",
  "description": "Send selected text to Slack instantly",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "storage",
    "scripting",
    "https://hooks.slack.com/*"
  ],
  "host_permissions": [
    "https://hooks.slack.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "options_page": "options.html"
}